<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="switchDarkTheme">
        <item name="android:switchMinWidth">56dp</item>
        <item name="android:checked">true</item>
        <item name="android:trackTint">@color/light_blue</item>
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>
    <style name="searchCross">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="tint">@color/black</item>
    </style>
    <style name="searchBar">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/search_bar_height</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="searchBarEditText">
        <item name="android:paddingStart">12dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLength">35</item>
        <item name="maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/default_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableStart">@drawable/search_bar</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edit_text</item>
    </style>
    <style name="mainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetLeft">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">16dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="arrowBack">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="iconTint">@color/white</item>
        <item name="android:background">#00000000</item>
    </style>
    <style name="headerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="settingsActivityText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_settingsActivity_buttons</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="settingActivityIcons">
        <item name="android:tint">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="iconTint">@color/white</item>
    </style>
    <style name="mainActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="activityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="trackLayoutHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:layout_marginStart">66dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginEnd">44dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_size</item>
    </style>
    <style name="trackLayoutDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/description_info</item>
    </style>
    <style name="trackLayoutCoverStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>
    <style name="trackLayoutLinearDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:layout_marginStart">66dp</item>
        <item name="android:layout_marginTop">34dp</item>
        <item name="android:layout_marginEnd">44dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="trackLayoutIcons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/white</item>
    </style>
    <style name="statusPlaceholder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="statusTextPlaceholder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="updateButtonPlaceholder">
        <item name="android:text">@string/update</item>
        <item name="android:layout_width">91dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/rounded_for_update_search</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="errorPlaceholder">
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/placeholder_vertical_orientation</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>