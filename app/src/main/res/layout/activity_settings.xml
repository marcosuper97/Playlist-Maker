<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    style="@style/settingsActivityStyle">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_panel_height"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            <Button
                style="@style/arrowBack"
                android:id="@+id/settings_back"
                app:icon="@drawable/arrow_back"/>
            <TextView
                style="@style/headerText"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginTop="0dp"
                android:text="@string/settings"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_button_height"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            <TextView
                android:text="@string/dark_theme"
                style="@style/settingsActivityText"/>
            <Switch
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|end"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_button_height"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            <TextView
                style="@style/settingsActivityText"
                android:text="@string/link_app"/>
            <ImageView
                style="@style/settingActivityIcons"
                android:layout_height="wrap_content"
                android:src="@drawable/share"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_button_height"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            <TextView
                style="@style/settingsActivityText"
                android:text="@string/link_support"/>
            <ImageView
                style="@style/settingActivityIcons"
                android:src="@drawable/support"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_button_height"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            <TextView
                style="@style/settingsActivityText"
                android:text="@string/documentation"/>
            <ImageView
                style="@style/settingActivityIcons"
                android:src="@drawable/arrow_forward"/>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>